{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/show.css') }}">
{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ task.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ task.description }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ task.category }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ task.Status }}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ task.Priority }}</td>
            </tr>
            <tr>
                <th>Deadline</th>
                <td>{{ task.deadline ? task.deadline|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="buttons">
        <a href="{{ path('app_task_index') }}">back to list</a>

        <a href="{{ path('app_task_edit', {'id': task.id}) }}">edit</a>

        {{ include('task/_delete_form.html.twig') }}
    </div>
{% endblock %}
